<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="Infinity" prefWidth="Infinity" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" stylesheets="@./custom.css" fx:controller="nicok.thesis.ui.HelloController">
    <HBox prefHeight="1000000" prefWidth="1000000" VBox.vgrow="ALWAYS">
        <VBox id="settings" prefHeight="Infinity" prefWidth="200.0" minWidth="200">
            <Label text="Image"/>
            <HBox prefHeight="0" prefWidth="1000000">
                <TextField fx:id="imagePath" />
                <Button mnemonicParsing="false" text="Open"/>
            </HBox>
            <Button mnemonicParsing="false" text="Run" onAction="#runDetection"/>
            <Button mnemonicParsing="false" text="Reset" onAction="#resetDetection"/>
        </VBox>
        <Pane fx:id="imagePane" prefWidth="1000000" prefHeight="1000000">
            <ImageView fx:id="imageView" id="image_view" preserveRatio="true" fitWidth="${imagePane.width}" fitHeight="${imagePane.height}"/>
        </Pane>
    </HBox>
    <Label fx:id="statusBar" id="status_bar" prefHeight="17.0" text="Here is a message!"/>
</VBox>
